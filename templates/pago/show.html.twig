{% extends 'base.html.twig' %}

{% block title %}Pago{% endblock %}

{% block body %}
    <h1>Pago</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pago.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ pago.fecha ? pago.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Importe</th>
                <td>{{ pago.importe }}</td>
            </tr>
