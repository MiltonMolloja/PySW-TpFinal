                <td>{{ pago.estado ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('pago_index') }}">back to list</a>

    <a href="{{ path('pago_edit', {'id': pago.id}) }}">edit</a>

